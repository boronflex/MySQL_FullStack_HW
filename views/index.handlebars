<h1>Eat-Da-Burger!</h1>

<div style="float:left">
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/uneaten-burger-block devoured=false}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div style="float:left">
  <ul>
    {{#each burger}}
      {{#if devoured}}
        {{> burgers/eaten-burger-block devoured=true}}
      {{/if}}
    {{/each}}
  </ul>
</div>

<br>

<h2 style="clear: both">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgeradd">Burger Name:</label>
    <input type="text" id="burgeradd" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
